<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient android:angle="90" android:type="linear" android:startColor="#fff" android:endColor="@android:color/darker_gray"></gradient>
        <corners android:radius="10dp"></corners>

    </shape>
</item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90"  android:centerColor="@android:color/darker_gray" android:type="linear" android:startColor="#fff" android:endColor="@android:color/darker_gray"></gradient>
            <corners android:radius="10dp"></corners>

        </shape>
    </item>
</selector>