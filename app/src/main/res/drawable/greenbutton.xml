<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp"></corners>
            <solid android:color="@android:color/holo_green_light"></solid>
            <stroke android:color="#fff" android:width="3dp"></stroke>
            <gradient android:angle="90" android:startColor="#fff" android:endColor="@android:color/holo_green_light" android:type="linear"></gradient>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp"></corners>
            <solid android:color="@android:color/holo_green_dark"></solid>
            <stroke android:color="#fff" android:width="3dp"></stroke>
            <gradient android:angle="90" android:startColor="@android:color/holo_green_light" android:endColor="#fff" android:type="linear"></gradient>
        </shape>
    </item>
</selector>